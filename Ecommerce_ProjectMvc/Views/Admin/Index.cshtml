@model IEnumerable<Ecommerce_ProjectMvc.Models.Tbl_product>

@{
    ViewBag.Title = "All Products > Dashboard";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@Html.ActionLink("New Products Create", "Create", null, new { @class = "btn btn-success" })
<hr />
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">All Products List</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">

            <table class="table table-striped table-hover" id="dataTable" width="100%" cellspacing="0">
                <tr>
                    <th>
                        Product Name
                        @*@Html.DisplayNameFor(model => model.Pro_name)*@
                    </th>
                    <th>
                        Product Price
                        @*@Html.DisplayNameFor(model => model.Pro_price)*@
                    </th>
                    <th>
                        Description
                        @*@Html.DisplayNameFor(model => model.Pro_des)*@
                    </th>
                    <th>
                        Image
                        @*@Html.DisplayNameFor(model => model.Pro_image)*@
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pro_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pro_price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pro_des)
                        </td>
                        <td>
                            <img src="@Url.Content(item.Pro_image)" width="100" height="70" />
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Pro_id }, new { @class = "btn btn-primary" }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Pro_id }, new { @class = "btn btn-info" }) |
                            @*@Html.ActionLink("Delete", "Delete", new { id = item.Pro_id }, new { @class = "btn btn-danger" })*@
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
        </div>
