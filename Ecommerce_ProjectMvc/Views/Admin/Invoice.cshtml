@model IEnumerable<Ecommerce_ProjectMvc.Models.Tbl_invoice>

@{
    ViewBag.Title = "All InvoiceList > Dashboard";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">All Invoice Information</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">

            <table class="table table-striped table-hover" id="dataTable" width="100%" cellspacing="0">
                <tr>
                    <th>
                        Date
                        @*@Html.DisplayNameFor(model => model.In_date)*@
                    </th>

                    <th>
                        User Name
                        @*@Html.DisplayNameFor(model => model.Tbl_user.U_name)*@

                    </th>

                    <th>
                        Total Bill
                        @*@Html.DisplayNameFor(model => model.In_totalbill)*@
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.In_date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tbl_user.U_name)

                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.In_totalbill)
                        </td>
                        <td>
                            @*@Html.ActionLink("Edit", "Edit", new { id = item.Invoice_id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Invoice_id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Invoice_id })*@
                        </td>
                    </tr>
                }
                <tfoot>
                <td colspan="2"></td>
                <td class="font-weight-bold"><h4>Total: @TempData["InvoiceTotal"]</h4></td>
                </tfoot>

            </table>
           
        </div>
    </div>
</div>