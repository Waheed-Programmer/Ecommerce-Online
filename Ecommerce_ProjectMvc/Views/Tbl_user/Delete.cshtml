@model Ecommerce_ProjectMvc.Models.Tbl_user

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
    
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Can You Delete This User?</h6>
        </div>
        <div class="card-body">
            <dl class="dl-horizontal">
                <dt>
                    User Name
                    @*@Html.DisplayNameFor(model => model.U_name)*@
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.U_name)
                </dd>

                <dt>
                    Phon Number
                    @*@Html.DisplayNameFor(model => model.U_contact)*@
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.U_contact)
                </dd>

                <dt>
                    Password
                    @*@Html.DisplayNameFor(model => model.U_password)*@
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.U_password)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }
        </div>
    </div>